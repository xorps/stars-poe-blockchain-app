{
    "compilerOptions": {
        "strict": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "module": "CommonJS",
        "target": "ESNext",
        "outDir": "build"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
}